{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SACCO+ Staff Admin",
  "version": "0.1.0",
  "identifier": "rw.ibimina.staff-admin",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "SACCO+ Staff Admin",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "fullscreen": false,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Ibimina Team",
    "copyright": "Copyright Â© 2024 Ibimina Team",
    "category": "Finance",
    "shortDescription": "SACCO+ Staff Admin",
    "longDescription": "Desktop application for SACCO+ staff administration",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://releases.ibimina.rw/staff-admin/{{target}}/{{arch}}/{{current_version}}"
      ]
    }
  }
}
