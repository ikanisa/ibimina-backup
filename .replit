modules = ["nodejs-20", "web", "bash", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["postgresql", "android-tools", "jdk17"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "website"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "client-app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "admin-app"

[[workflows.workflow]]
name = "website"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/website && npx next dev -p 3001 -H 0.0.0.0"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "client-app"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/client && npx next dev -p 3000 -H 0.0.0.0"
waitForPort = 3000

[[workflows.workflow]]
name = "admin-app"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/admin && npx next dev -p 5000 -H 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd apps/admin && npx next start -p 5000 -H 0.0.0.0"]
build = ["bash", "-c", "pnpm install && pnpm --filter @ibimina/admin run build"]
